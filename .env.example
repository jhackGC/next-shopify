# Environment variables for Shopify integration
# Copy this file to .env.local and fill in your actual values

# Shopify Store Configuration (Server-side only - not exposed to browser)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token

# Shopify Customer Account API (Server-side only - more secure)
SHOPIFY_CUSTOMER_ACCOUNT_API_CLIENT_ID=your_customer_account_api_client_id
SHOPIFY_CUSTOMER_ACCOUNT_API_CLIENT_SECRET=your_customer_account_api_client_secret
SHOPIFY_CUSTOMER_ACCOUNT_API_URL=https://shopify.com/your-customer-account-api-url

# Application Configuration (Public - needed for client-side)
NEXT_PUBLIC_APP_URL=http://localhost:3000
